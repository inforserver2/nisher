<%= link_to("Copiar os dados da minha conta", :address_copy, remote:true) if is_logged? %>
<%= form_for @cart, remote:true, html:{id:"address_input", class:"form"} do |f| %>
  <div id="info">
    <%= render :partial => "shared/error", :locals=>{:obj=>@cart} %>


    <%= f.fields_for :frete do |a| %>

      <div class="field">
        <%= a.label :to_name %><br />
        <%= a.text_field :to_name %>
      </div>

      <div class="field">
        <%= a.label :street_name %><br />
        <%= a.text_field :street_name %>
      </div>
      
      <div class="field">
        <%= a.label :number %><br />
        <%= a.text_field :number %>
      </div>

      <div class="field">
        <%= a.label :neighborhood %><br />
        <%= a.text_field :neighborhood %>
      </div>

      <div class="field">
        <%= a.label :complement %><br />
        <%= a.text_field :complement %>
      </div>

      <div class="field">
        <%= a.label :city_name %><br />
        <%= a.text_field :city_name %>
      </div>

      <div class="field">
        <%= a.label :state_name %><br />
        <%= a.text_field :state_name %>
      </div>
      
      <div class="field">
        <%= a.label :zip_to %><br />
        <%= a.text_field :zip_to %>
      </div>

      <div class="field">
        <%= a.label :country_id %><br />
        <%= a.collection_select :country_id, Country.all, :id, :name %>
      </div>

    <% end -%>
  </div> 

    <div class="actions">
      <%= f.submit "Calcular o frete" %>
    </div>
    

<% end -%>
