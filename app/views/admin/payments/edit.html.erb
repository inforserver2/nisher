<h1 class="title">Admin - Edição dados envio de pagamento</h1>
<%= form_for [:admin,@payment], html:{class:"form"} do |f| %>
  <%= render :partial => 'shared/error', :locals=>{:obj=>@payment}  %>

  <div class="field">
    <%= f.label :value %><br />
    <%= f.text_field :value %>
  </div>

  <div class="field">
    <%= f.label :status %>
    <%= f.select :status, [["a enviar", 0], ["enviado",1], ["pendente", 2], ["cancelado",3]]%>
  </div>

  <div class="field">
    <%= f.label :blocked %><br />
    <%= f.check_box :blocked %>
  </div>

  <div class="field">
    <%= f.label :closed %><br />
    <%= f.check_box :closed %>
  </div>

  <div class="field">
    <%= f.label :obs %><br />
    <%= f.text_area :obs %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

