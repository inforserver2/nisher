<h1 class="title">Edição dados usuário</h1>
<%= form_for [:admin,@user], html:{class:"form"} do |f| %>
  <%= render :partial => 'shared/error', :locals=>{:obj=>@user}  %>


  <div class="field">
    <%= f.label :account_type_id %>
    <%= f.select :account_type_id, [["consumo", 1], ["negócios",2]]%>
  </div>

  <div class="field">
    <%= f.label :status %>
    <%= f.select :status, [["pendente", 0], ["ativo",1], ["inativo", 2], ["cancelado", 3]]%>
  </div>

  <div class="field">
    <%= f.label :expire_date %>
    <%= f.date_select :expire_date %>
  </div>

  <div class="field" id="login_place">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
   <div id="check_for_user"></div>

  </div>

  <div class="field">
    <%= f.label :email1 %><br />
    <%= f.text_field :email1 %>
    <div id="check_for_email"></div>
  </div>

  <div class="field">
    <%= f.label :blocked %><br />
    <%= f.check_box :blocked %>
  </div>

  <div class="field">
    <%= f.label :redir_from %><br />
    <%= f.text_field :redir_from %>
  </div>

  <div class="field">
    <%= f.label :ignore_rules %><br />
    <%= f.check_box :ignore_rules %>
  </div>

  <div class="field">
    <%= f.label :extra %><br />
    <%= f.text_area :extra %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>



<% end %>
