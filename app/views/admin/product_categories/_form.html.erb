

<%= form_for([:admin,@admin_product_category], :html=>{:class=>:form}) do |f| %>
  <%= render :partial => "shared/error", :locals=>{:obj=>@admin_product_category} %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :id=>:textareaLimit %>
    <p><span id="charsLeft">0</span> caracteres restantes.</p>
  </div>
  <div class="field">
    <%= f.label :image %><br />
    <%= image_tag(@admin_product_category.image_url(:medium)) if @admin_product_category.image? %>
    <%= f.file_field :image %>
    <%= f.hidden_field :image_cache %>
  </div>
  <% if @admin_product_category.image? %>
    <div class="field">
      <%= f.label :remove_image %><br/>
      <%= f.check_box :remove_image %>
    </div>
    
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= javascript_tag "load_textarealimit();"  %>
