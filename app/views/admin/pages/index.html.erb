<h1 class="title">Paginas</h1>
<%= button_to 'Adc Nova Pagina', new_admin_page_path, :method=>:get %>

<table class="nisher">
  <tr>
    <th>Id</th>
    <th>Nome</th>
    <th colspan=3 >Funções</th>
  </tr>

<% @admin_pages.each do |admin_page| %>
  <tr>
    <td><%= admin_page.id %></td>
    <td><%= admin_page.name %></td>
    <td><%= link_to 'Exibir', [:admin,admin_page] %></td>
    <td><%= link_to 'Editar', edit_admin_page_path(admin_page) %></td>
    <td><%= link_to 'Deletar', [:admin,admin_page], confirm: 'Você tem certeza?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

